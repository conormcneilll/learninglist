<%- include('header') %>

<body>
    <h1>Create a New Learnlist</h1>

    <form action="/createlist" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required><br><br>

        <label for="subject_topic">Subject/Topic:</label>
        <input type="text" id="subject_topic" name="subject_topic" required><br><br>

        <label for="description">Description:</label><br>
        <textarea id="description" name="description" rows="4" cols="50" required></textarea><br><br>

        <label for="img_url">Image URL:</label>
        <input type="url" id="img_url" name="img_url"><br><br>

        <button type="submit">Create Learnlist</button>
    </form>
</body>

