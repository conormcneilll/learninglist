<%- include('header') %>

<div class="container mt-5">
    <div class="card">
        <img src="<%= learnlist.img_url %>" class="card-img-top" alt="<%= learnlist.title %> Image">
        <div class="card-body">
            <h2 class="card-title"><%= learnlist.title %></h2>
            <p class="card-text"><%= learnlist.description %></p>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <p class="card-text"><strong>Subject:</strong> <%= learnlist.subject_topic %></p>
                <p class="card-text"><strong>Rating:</strong> <%= learnlist.rating %></p>
            </div>
            <p class="card-text"><strong>Created by:</strong> <%= learnlist.creator_username %></p>

            <!-- Display resources associated with the learning list -->
            <h3 class="mt-4">Resources:</h3>
            <ul class="list-group">
                <% (learnlist.resource || []).forEach((resource) => { %>
                    <li class="list-group-item">
                        <a href="<%= resource.resource_url %>" target="_blank"><%= resource.resource_title %></a>
                        <span class="badge bg-secondary ms-2"><%= resource.resource_type %></span>
                    </li>
                <% }); %>
            </ul>
        </div>
    </div>
</div>

<%- include('footer') %>
