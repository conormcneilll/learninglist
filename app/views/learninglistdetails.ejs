<!-- learnlist.ejs -->

<%- include('header') %>

<div class="container mt-5">
    <div class="card mb-4">
        <img src="<%= learnlist.img_url %>" class="card-img-top" alt="<%= learnlist.learnlist_title %> Image">
        <div class="card-body">
            <h2 class="card-title"><%= learnlist.learnlist_title %></h2>
            <p class="card-text"><%= learnlist.description %></p>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <p class="card-text"><strong>Subject:</strong> <%= learnlist.subject_topic %></p>
                <p class="card-text"><strong>Rating:</strong> <%= learnlist.average_rating %></p>
            </div>
            <p class="card-text"><strong>Created by:</strong> <%= learnlist.creator_username %></p>
            
            <% if (member) { %>
                <form action="/add-to-favorites" method="post">
                    <input type="hidden" name="learnlist_id" value="<%= learnlist.learnlist_id %>">
                    <button type="submit" class="btn btn-primary">Add to Favorites</button>
                </form>

            <% } %>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Resources</h3>
            <ul class="list-group">
                <% if (learnlist.resources && learnlist.resources.length > 0) { %>
                    <% learnlist.resources.forEach((resource) => { %>
                        <li class="list-group-item">
                            <a href="<%= resource.resource_url %>" target="_blank"><%= resource.resource_title %></a>
                            <span class="badge bg-secondary ms-2"><%= resource.resource_type %></span>
                        </li>
                    <% }); %>
                <% } else { %>
                    <li class="list-group-item">No resources found.</li>
                <% } %>
            </ul>
        </div>
    </div>
</div>

<%- include('footer') %>
